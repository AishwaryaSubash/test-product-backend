generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    username String
    email    String
    password String
}

model Product {
    id          String @id @default(auto()) @map("_id") @db.ObjectId
    productname String
    productdesc String
    status      String
    price       Int
}
