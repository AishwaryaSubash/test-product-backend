generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id       Int    @id @default(0) @map("_id")
    username String
    email    String
    password String
}

model Product {
    id          Int    @id @default(0) @map("_id")
    productname String
    productdesc String
    status      String
    price       Int
}
